<UserControl x:Class="WorldCupWPF.UserControls.PlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldCupWPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250" Loaded="PlayUC_Loaded">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20" MouseDown="PlayerUC_Click">

        
        <Label x:Name="lblNumber" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="10" Foreground="White" FontWeight="Bold"/>
        <Image x:Name="imgPlayer" Grid.Row="1" Height="25" Width="25"/>
        <Label x:Name="lblPlayerName" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="10" Foreground="White" FontWeight="Bold"/>
        

    </StackPanel>

</UserControl>
